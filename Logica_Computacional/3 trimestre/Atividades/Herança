    private void AlunoActionPerformed(java.awt.event.ActionEvent evt) {                                      
        
        int qnt = Integer.parseInt(JOptionPane.showInputDialog("quantos alunos"));
        ArrayList<Aluno> lista = new ArrayList<>();
        for (int i = 0; i<qnt; i++){
            String nome = JOptionPane.showInputDialog((i+1)+"° nome");
            String cpf = JOptionPane.showInputDialog("Cpf de "+nome);
            int idade = Integer.parseInt(JOptionPane.showInputDialog("idade de " +nome));
            String cadastro = JOptionPane.showInputDialog("O cadastro de "+nome);
           
            Aluno p = new Aluno(cadastro, nome, cpf, idade);
            lista.add(p);
         
        }
        for(Aluno p:lista){
            JOptionPane.showMessageDialog
        (null,"Nome: "+p.getNome()+
        "\nCPF: "+p.getCpf() +
        "\nidade: " + p.getIdade()+
        "\ncadastro: "+ p.getCadastro());
            
        } 
    }                                     

    private void PessoaActionPerformed(java.awt.event.ActionEvent evt) {                                       
     int qnt = Integer.parseInt(JOptionPane.showInputDialog("quantas pessoas"));
        ArrayList<Pessoa> lista = new ArrayList<>();
        for (int i = 0; i<qnt; i++){
            String nome = JOptionPane.showInputDialog((i+1)+"° nome");
            String cpf = JOptionPane.showInputDialog("cpf de "+nome);
            int idade = Integer.parseInt(JOptionPane.showInputDialog("idade de " +nome));
           
            Pessoa p = new Pessoa(nome, cpf, idade);
            lista.add(p);
         
        }
        for(Pessoa p:lista){
            JOptionPane.showMessageDialog
        (null,"Nome: "+p.getNome()+
        "\nCPF: "+p.getCpf() +
        "\nidade: " + p.getIdade());
            
        }
    }                                      

